<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p> <%= e %></p>
  <% end %>
<% end %>

<h1>Sign up</h1>
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Sign Up", class: "button is-primary" %>
<% end %>
